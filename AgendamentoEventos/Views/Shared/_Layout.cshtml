<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pequenos Eventos A3</title>

    <!-- Tailwind CSS via CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Estilos personalizados (opcional) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="min-h-screen flex flex-col bg-white text-gray-900">
    <header class="bg-pink-200 p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-xl font-bold">Pequenos Eventos A3</h1>
            <nav class="flex gap-4">
                <a href="/" class="text-sm font-medium text-gray-700 hover:text-black">Início</a>
                <a href="/CadastroEventos" class="text-sm font-medium text-gray-700 hover:text-black">Cadastrar Evento</a>
                <a href="/ListagemEventos" class="text-sm font-medium text-gray-700 hover:text-black">Eventos</a>
            </nav>
        </div>
    </header>

    <main class="flex-grow">
        @RenderBody()
    </main>

    <footer class="bg-gray-100 py-6 text-center text-sm text-gray-500">
        <p>&copy; 2024 Pequenos Eventos A3. Todos os direitos reservados.</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
