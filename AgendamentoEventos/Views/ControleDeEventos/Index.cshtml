@model IEnumerable<AgendamentoEventos.Models.EventoModel>

@{
    ViewData["Title"] = "Listagem de eventos";
}

<div class="container mt-4">

    <header class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 mb-0">Listagem de eventos</h1>
        <a class="btn btn-primary" asp-controller="ControleDeEventos" asp-action="CadastrarEventos">
            + Novo Evento
        </a>
    </header>

    <div class="row">
        @foreach (var evento in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img class="card-img-top" 
                         src="@(evento.ImagemBytes != null ? $"data:image/jpeg;base64,{Convert.ToBase64String(evento.ImagemBytes)}" : "/images/placeholder.png")" 
                         alt="Imagem do evento" 
                         style="max-height: 250px; object-fit: cover;">

                    <div class="card-body p-3">
                        <h5 class="card-title">@evento.Artista</h5>
                        <p class="card-text mb-1"><strong>Data:</strong> @evento.DataHora.ToString("dd/MM/yyyy HH:mm")</p>
                        <p class="card-text mb-1"><strong>Local:</strong> @evento.Localizacao</p>
                        <p class="card-text text-success fw-semibold mb-3">
                            <i class="bi bi-currency-dollar"></i> @evento.Preco.ToString("C", new System.Globalization.CultureInfo("pt-BR"))
                        </p>
                        <a class="btn btn-primary me-2" role="button" asp-controller="ControleDeEventos" asp-action="VerEvento">Ver evento</a>
                        <a class="btn btn-success" role="button" asp-controller="ControleDeEventos" asp-action="ComprarAgora">Comprar agora</a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>