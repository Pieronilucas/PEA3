@{
	ViewData["Title"] = "Listagem de eventos";


	var eventos = new List<dynamic>
	{
		new { Titulo = "Show do Manoel Gomes", Data = "16/08 18:00", Local = "Divinóia", ImagemUrl = "caminho-imagem.jpg" },
		new { Titulo = "Show da Banda X", Data = "20/08 20:30", Local = "São Paulo", ImagemUrl = "caminho-imagem.jpg" },
		new { Titulo = "Festival Rock", Data = "01/09 16:00", Local = "Belo Horizonte", ImagemUrl = "caminho-imagem.jpg" }
	};
}

<div class="container">
	<div class="d-grid gap-2 d-md-flex justify-content-md-start">
		<a class="btn btn-info" role="button" asp-controller="ControleDeEventos" asp-action="CadastrarEventos">Criar novo evento</a>
	</div>
	<h1 class="display-4 mb-4">Listagem de eventos</h1>
	<div class="row">
		@foreach (var evento in eventos)
		{
			<div class="col-md-4 mb-4">
				<div class="card h-100 shadow-sm">
					<img class="card-img-top" src="@evento.ImagemUrl" alt="Imagem do evento">
					<div class="card-body p-3">
						<h5 class="card-title">@evento.Titulo</h5>
						<p class="card-text">@evento.Data</p>
						<p class="card-text">@evento.Local</p>
						<a href="#" class="btn btn-primary me-2">Ver evento</a>
						<a href="#" class="btn btn-success">Comprar agora</a>
					</div>
				</div>
			</div>
		}
	</div>
</div>